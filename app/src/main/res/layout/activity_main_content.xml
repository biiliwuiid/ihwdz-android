<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-30dp"
    android:layout_marginBottom="-30dp"
    android:clipChildren="false"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/publish_background"
        android:scaleType="center"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        tl:tl_iconHeight="23dp"
        tl:tl_iconWidth="23dp"
        tl:tl_indicator_color="@color/orangeTab"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/orangeTab"
        tl:tl_textUnselectColor="@color/blackText"
        tl:tl_textsize="12sp"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="0dp"/>

</RelativeLayout>
