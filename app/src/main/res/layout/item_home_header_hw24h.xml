<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_header_height"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:clipChildren="true"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/title_hw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBackground"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/padding_left_header"
        android:paddingBottom="6dp"
        android:paddingRight="16dp">
        <ImageView
            android:layout_marginTop="@dimen/margin_top_orange_line"
            android:layout_marginLeft="@dimen/margin_left_orange_line"
            android:layout_marginBottom="@dimen/margin_bottom_orange_line"
            android:layout_marginRight="@dimen/margin_right_orange_line"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_vertical_line_black_24dp"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_header_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="鸿网"
            style="@style/TitleTextStyle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word24"
            android:layout_marginLeft="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_header_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="小时"
            style="@style/TitleTextStyle"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_header_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更多>"
            android:clickable="true"
            />
    </LinearLayout>

    <View
        android:layout_below="@+id/title_hw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:background="@color/grayLine"/>


</LinearLayout>