<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"
    android:orientation="vertical"
    tools:context="com.ihwdz.android.hwapp.ui.orders.warehouse.buildwarehouse.WarehouseActivity">

    <include layout="@layout/base_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_normal_padding"
        >

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:background="@color/whiteBackground">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/warehouse_name"
                style="@style/PerCTextStyle"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/item_hint_padding"
                android:background="@null"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:hint="@string/warehouse_name"
                />

        </RelativeLayout>
        <View
            android:id="@+id/grey_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:background="@color/whiteBackground">
            <TextView
                android:id="@+id/tv_linkman"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv2"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/linkman"
                style="@style/PerCTextStyle"/>
            <EditText
                android:id="@+id/edit_linkman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/item_hint_padding"
                android:background="@null"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:hint="@string/linkman"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/link_tel"
                style="@style/PerCTextStyle"/>


            <EditText
                android:id="@+id/edit_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/link_tel"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/address"
                style="@style/PerCTextStyle"/>


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/choose_pcd"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/address_detail"
                style="@style/PerCTextStyle"/>


            <EditText
                android:id="@+id/edit_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/address_detail"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:background="@color/whiteBackground">
            <TextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/as_default"
                style="@style/PerCTextStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/item_hint_padding"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/width_checkbox"
                    android:layout_height="@dimen/height_checkbox"
                    style="@style/CheckBoxStyle" />

            </LinearLayout>



        </RelativeLayout>
        <View
            android:id="@+id/grey_line6"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>


        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_orange_oval_background"
            android:textColor="@color/whiteBackground"
            android:text="@string/submit" />

    </LinearLayout>


</LinearLayout>
