<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ihwdz.android.hwapp.ui.me.improveinfo.ImproveInfoActivity">

    <include layout="@layout/base_title_bar"/>

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/blackText"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_enter"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="name"
            android:textSize="@dimen/text_content_grey"
            android:textColor="@color/blackText2"
            />

        <ImageView
            android:id="@+id/iv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <RelativeLayout
        android:id="@+id/linear_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/telephone"
            android:textColor="@color/blackText"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_enter_tel"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="13521548957"
            android:textSize="@dimen/text_content_grey"
            android:textColor="@color/blackText2"
            />

        <ImageView
            android:id="@+id/iv_enter_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/email"
            android:textColor="@color/blackText"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_enter2"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="email"
            android:textSize="@dimen/text_content_grey"
            android:textColor="@color/blackText2"
            />

        <ImageView
            android:id="@+id/iv_enter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <RelativeLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/district"
            android:textColor="@color/blackText"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_enter3"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:gravity="center"
            android:text="xx省xxs市xx区"
            android:textColor="@color/blackText2"
            android:textSize="@dimen/text_content_grey" />

        <ImageView
            android:id="@+id/iv_enter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <RelativeLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/address_detail"
            android:textColor="@color/blackText"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_enter4"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="xx省xxs市xx区xx路xx号"
            android:textSize="@dimen/text_content_grey"
            android:textColor="@color/blackText2"
            />

        <ImageView
            android:id="@+id/iv_enter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <RelativeLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:clickable="true"
        android:visibility="gone"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/enterprise_nature"
            />

        <TextView
            android:id="@+id/tv_enterprise_nature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_enter5"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="@string/enterprise_nature_text"
            />

        <ImageView
            android:id="@+id/iv_enter5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>

</LinearLayout>
