<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteBackground"
    tools:context=".ui.login.register.RegisterActivity">

    <include
        layout="@layout/base_title_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_normal_padding"
        >

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/user"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv1"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/name"
                style="@style/PerCTextStyle"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/item_hint_padding"
                android:background="@null"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:hint="@string/name_hint"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:visibility="gone"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/company"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv2"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/company"
                style="@style/PerCTextStyle"/>

            <EditText
                android:id="@+id/edit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/telephone_hint"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/telephone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv3"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/telephone"
                style="@style/PerCTextStyle"/>


            <EditText
                android:id="@+id/edit_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/telephone_hint"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/verification_code"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv4"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/verification"
                style="@style/PerCTextStyle"/>


            <EditText
                android:id="@+id/edit_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/verification_hint"
                />
            <com.ihwdz.android.hwapp.widget.CountDownTextView
                android:id="@+id/tv_send_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/verification_get"
                android:clickable="true"
                style="@style/HintTextStyle"
                android:background="@drawable/oval_black_bg"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/locked"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv5"
                android:layout_marginLeft="@dimen/item_icon_padding"
                android:text="@string/pwd"
                style="@style/PerCTextStyle"/>


            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:paddingLeft="@dimen/item_hint_padding"
                style="@style/HintTextStyle"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/pwd_hint"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <!--<LinearLayout-->
            <!--android:id="@+id/type_vip"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/item_height_per"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:orientation="horizontal">-->
            <!--<CheckBox-->
                <!--android:id="@+id/bt_purchaser"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--style="@style/RadioStyle"-->
                <!--android:text="@string/purchaser"-->
                <!--/>-->
            <!--<CheckBox-->
                <!--android:id="@+id/bt_business"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--style="@style/RadioStyle"-->
                <!--android:text="@string/business"/>-->

        <!--</LinearLayout>-->


        <RelativeLayout
            android:id="@+id/linear_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:visibility="gone"
            android:background="@color/whiteBackground">

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentLeft="true"
                android:layerType="software"
                android:background="@drawable/dotted_line" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_per"
                android:paddingLeft="5dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/bt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/blackText2"
                    android:text="@string/business_management"
                    />
                <RadioButton
                    android:id="@+id/bt_chose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/RadioStyle1"
                    android:text="@string/chose"/>

            </RadioGroup>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/whiteBackground">
            <CheckBox
                android:id="@+id/bt_accept"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                style="@style/RadioStyle2"
                android:text="@string/protocol"
                />
            <TextView
                android:id="@+id/tv_terms_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:textSize="10sp"
                android:textColor="@color/link_blue"
                android:text="@string/terms_of_service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/blackText4"
                android:text="@string/and"/>

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:textSize="10sp"
                android:textColor="@color/link_blue"
                android:text="@string/privacy_policy"/>



        </LinearLayout>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_orange_oval_background"
            android:textColor="@color/whiteBackground"
            android:text="@string/register"
            />

    </LinearLayout>

</LinearLayout>
