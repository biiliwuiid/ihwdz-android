<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    android:orientation="vertical"
    tools:context="com.ihwdz.android.hwapp.ui.me.settings.SettingsActivity">

    <include layout="@layout/base_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greyBackground"/>
        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/hw_vipcn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv1"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/hw_vip_cn_per"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>
        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/about_us"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv2"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/about_us_per"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>
        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv3"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/feedback_per"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:id="@+id/iv_enter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>
        <RelativeLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/customer_service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/customer_service_per"
                style="@style/PerCTextStyle"/>
            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toLeftOf="@+id/iv_enter4"
                android:layout_marginRight="@dimen/item_normal_padding"
                android:text="@string/service_tel_per"
                android:autoLink="phone"
                android:textColor="@color/orangeTab"
                style="@style/PerCTextStyle"/>


            <ImageView
                android:id="@+id/iv_enter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_normal_padding"
            android:layout_marginLeft="@dimen/item_normal_padding"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_orange_oval_background"
            android:textColor="@color/whiteBackground"
            android:text="@string/logout"
            />


    </LinearLayout>


</LinearLayout>
