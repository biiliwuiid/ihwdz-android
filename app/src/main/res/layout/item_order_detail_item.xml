<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:id="@+id/linear_order"
    android:background="@color/greyBackground">
    <TextView
        android:id="@+id/tv_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="breed"
        style="@style/BlackTextStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牌号：BL6200，生产厂家：乌兹别克"
            style="@style/GreyTextStyle"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_icon_padding"
            android:text="￥10120.00"
            style="@style/Right12TextStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_warehouse"
            style="@style/GreyTextStyle"/>
        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="x10"
            style="@style/Right12TextStyle"/>

    </LinearLayout>

</LinearLayout>
