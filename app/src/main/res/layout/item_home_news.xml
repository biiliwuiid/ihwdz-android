<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_news"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/whiteBackground">
    <include
        android:id="@+id/empty_view"
        android:visibility="gone"
        layout="@layout/item_detail_comment_empty"/>

    <LinearLayout
        android:id="@+id/content_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_news_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whiteBackground"
        android:paddingTop="@dimen/padding_top_item"
        android:paddingLeft="@dimen/padding_left_item"
        android:paddingRight="@dimen/padding_right_item"
        android:paddingBottom="@dimen/padding_bottom_item"
        >
        <ImageView
            android:layout_width="@dimen/item_news_image_size"
            android:layout_height="@dimen/item_news_image_size"
            android:id="@+id/articleImg1"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:src="@drawable/image1"
            android:visibility="gone"
            />
        <com.ihwdz.android.hwapp.widget.RoundImageView
            android:layout_width="@dimen/item_news_image_size"
            android:layout_height="@dimen/item_news_image_size"
            android:id="@+id/articleImg"
            android:scaleType="fitXY"
            app:type="round"
            android:src="@drawable/image1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="红豆早餐|全球聚乙烯价格战一触即发"
                android:textColor="@color/blackText"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_gravity="right"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/reader"
                    android:src="@drawable/reader"
                    android:scaleType="center"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/viewTimes"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:text="92"
                    android:textSize="@dimen/item_hw24h_name_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/author"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Luffy"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="@dimen/item_hw24h_name_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/date_news"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="2018-07/20"
                    android:textSize="@dimen/item_hw24h_name_size"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"
        />

</LinearLayout>
