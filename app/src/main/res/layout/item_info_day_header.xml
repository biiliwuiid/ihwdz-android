<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:orientation="vertical"
    android:background="@color/whiteBackground"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/item_info_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_left_info"
        android:textColor="@color/blackText4"
        android:text="2018-08-16"
        style="@style/TitleTextGreyStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="-1px"
        android:background="@color/grayLineDarker" />

</LinearLayout>