<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/step4_layout"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/greyBackground">
    <RelativeLayout
        android:id="@+id/linear_admin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_per"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:paddingLeft="@dimen/item_normal_padding"
        android:paddingRight="@dimen/item_normal_padding"
        android:background="@color/whiteBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/blackText"
            android:text="@string/market_consultant"
            style="@style/PerCTextStyle"/>

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/blackText2"
            android:layout_toLeftOf="@+id/iv_enter1"
            android:layout_marginRight="@dimen/padding_enter_info_improve"
            android:text="@string/choose_please"
            />

        <ImageView
            android:id="@+id/iv_enter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grayLineDarker"/>

    <CheckBox
        android:id="@+id/bt_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="@color/blackText"
        style="@style/RadioStyle2"
        android:text="@string/assign_market_consultant" />


</LinearLayout>