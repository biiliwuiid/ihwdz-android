<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_header_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/whiteBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="@dimen/tab_line_padding"
        android:paddingRight="@dimen/tab_line_padding"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/current_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="时事新闻"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/text_background_selector"
            android:focusableInTouchMode="true"
            android:gravity="center"
            style="@style/TitleTextStyle"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/tab_line_padding"
        android:paddingRight="@dimen/tab_line_padding"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/industry_focused"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="行业聚焦"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/text_background_selector"
            android:focusableInTouchMode="true"
            android:gravity="center"
            style="@style/TitleTextStyle"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/tab_line_padding"
        android:paddingRight="@dimen/tab_line_padding"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/market_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@drawable/text_color_selector"
            android:background="@drawable/text_background_selector"
            android:focusableInTouchMode="true"
            android:text="市场评述"
            android:gravity="center"
            style="@style/TitleTextStyle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>


</LinearLayout>