<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/greyBackground"
    >

    <include
        layout="@layout/user_center_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greyBackground"/>

        <RelativeLayout
            android:id="@+id/linear01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/logistics"/>

            <TextView
                android:id="@+id/tv01"
                style="@style/PerCTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/iv01"
                android:gravity="center"
                android:text="@string/logistics_per" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:id="@+id/grey_line01"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>
        <View
            android:id="@+id/boundary01"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:background="@color/greyBackground"/>


        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/hw_vipcn"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv1"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/hw_vip_cn_per"
                style="@style/PerCTextStyle"/>

            <TextView
                android:id="@+id/tv_quota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:layout_toLeftOf="@+id/enter1"
                android:layout_marginRight="@dimen/item_normal_padding"
                android:text="ï¿¥150,000.000"
                android:textSize="12sp"
                android:textColor="@color/orangeTab"
                style="@style/PerCTextStyle"/>


            <ImageView
                android:id="@+id/enter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:id="@+id/grey_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>
        <View
            android:id="@+id/boundary"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:background="@color/greyBackground"/>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/about_us"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv2"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/about_us_per"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:id="@+id/grey_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/customer_service"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv3"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/customer_service_per"
                style="@style/PerCTextStyle"/>

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toLeftOf="@+id/iv_enter3"
                android:layout_marginRight="@dimen/item_normal_padding"
                android:text="@string/service_tel_per"
                android:autoLink="phone"
                android:textColor="@color/orangeTab"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:id="@+id/iv_enter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        <View
            android:id="@+id/grey_line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayLineDarker"/>

        <RelativeLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_per"
            android:clickable="true"
            android:paddingLeft="@dimen/item_normal_padding"
            android:paddingRight="@dimen/item_normal_padding"
            android:background="@color/whiteBackground">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:src="@drawable/settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="@dimen/item_normal_padding"
                android:text="@string/settings_per"
                style="@style/PerCTextStyle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>
