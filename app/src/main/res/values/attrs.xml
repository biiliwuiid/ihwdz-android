<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 带下拉选择框的 EditText （发布求购）-->
    <declare-styleable name="DropEditText">
        <attr name="drawableRight" format="reference" />
        <attr name="dropMode">
            <enum name="flow_parent" value="0" />
            <enum name="wrap_content" value="1" />
        </attr>
        <attr name="hint" format="string|reference" />
    </declare-styleable>

    <!-- 圆角ImageView RoundImageView -->
    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>


</resources>